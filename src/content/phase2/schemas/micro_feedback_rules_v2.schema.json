{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "micro_feedback_rules_v2.schema.json",
  "title": "Micro Feedback Rules v2",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "inputs_expected", "selection", "calm", "competitive"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "inputs_expected": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 5
    },
    "selection": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_messages", "apply_order"],
      "properties": {
        "max_messages": { "type": "integer", "minimum": 1, "maximum": 3 },
        "apply_order": { "type": "string", "enum": ["top_to_bottom"] },
        "rotate_within_same_rule": { "type": "boolean" }
      }
    },
    "calm": { "$ref": "#/$defs/ruleSet" },
    "competitive": { "$ref": "#/$defs/ruleSet" }
  },
  "$defs": {
    "ruleSet": {
      "type": "object",
      "additionalProperties": false,
      "required": ["primary_rules_ordered", "secondary_rules_ordered"],
      "properties": {
        "primary_rules_ordered": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/rule" }
        },
        "secondary_rules_ordered": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/rule" }
        }
      }
    },
    "rule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "if", "messages"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "if": { "type": "string", "minLength": 1 },
        "messages": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      }
    }
  }
}
