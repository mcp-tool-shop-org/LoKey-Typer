{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "exercise_template.schema.json",
  "title": "Template Exercise",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "mode",
    "pack",
    "title",
    "difficulty",
    "estimated_seconds",
    "type",
    "template",
    "slots",
    "tags"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "mode": { "type": "string", "enum": ["focus", "real_life", "competitive", "mixed"] },
    "pack": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "difficulty": { "type": "integer", "minimum": 1, "maximum": 5 },
    "estimated_seconds": { "type": "integer", "minimum": 10, "maximum": 600 },
    "type": { "const": "template" },
    "template": { "type": "string", "minLength": 1 },
    "slots": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "array",
        "minItems": 1,
        "items": { "type": "string" }
      }
    },
    "render_rules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_variants": { "type": "integer", "minimum": 1, "maximum": 100000 },
        "seeded": { "type": "boolean" }
      }
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    }
  }
}
